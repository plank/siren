{
    "name": "plank/siren",
    "description": "Mermaid.js markdown generator for php",
    "keywords": [
        "plank",
        "siren"
    ],
    "homepage": "https://github.com/plank/siren",
    "license": "MIT",
    "authors": [
        {
            "name": "Kurt Friars",
            "email": "kurt@plankdesign.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Plank\\Siren\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plank\\Siren\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
